{
    "templates": [
        {
            "id": "compilation_error_fix",
            "name": "コンパイルエラー修正",
            "description": "C/C++コンパイルエラーを修正するための一般的な手順",
            "pattern_ids": [
                "compilation_error"
            ],
            "fix_steps": [
                {
                    "type": "command",
                    "description": "不足しているヘッダーファイルをインストール",
                    "command": "sudo apt-get update && sudo apt-get install -y build-essential",
                    "validation": "gcc --version"
                },
                {
                    "type": "file_modification",
                    "description": "Makefileのコンパイラフラグを確認・修正",
                    "file_path": "Makefile",
                    "action": "replace",
                    "content": "CFLAGS += -I/usr/include",
                    "validation": "grep -q 'CFLAGS' Makefile"
                }
            ],
            "risk_level": "medium",
            "estimated_time": "15分",
            "success_rate": 0.70,
            "prerequisites": [
                "ソースコードが存在すること",
                "Makefileまたはビルドスクリプトが存在すること"
            ],
            "validation_steps": [
                "コンパイルが正常に完了することを確認",
                "実行ファイルが生成されることを確認"
            ]
        },
        {
            "id": "make_target_fix",
            "name": "Makeターゲット修正",
            "description": "Makefileのターゲット不足エラーを修正",
            "pattern_ids": [
                "make_target_not_found"
            ],
            "fix_steps": [
                {
                    "type": "file_modification",
                    "description": "Makefileにデフォルトターゲットを追加",
                    "file_path": "Makefile",
                    "action": "create",
                    "content": "all:\n\t@echo \"Building project...\"\n\t$(MAKE) build\n\nbuild:\n\t@echo \"Build target not implemented yet\"\n\nclean:\n\t@echo \"Clean target not implemented yet\"\n\n.PHONY: all build clean",
                    "validation": "make -n all"
                }
            ],
            "risk_level": "low",
            "estimated_time": "5分",
            "success_rate": 0.80,
            "prerequisites": [
                "プロジェクトディレクトリが存在すること"
            ],
            "validation_steps": [
                "make -n でエラーが発生しないことを確認"
            ]
        },
        {
            "id": "cmake_configuration_fix",
            "name": "CMake設定修正",
            "description": "CMakeの設定エラーを修正",
            "pattern_ids": [
                "cmake_configuration_error"
            ],
            "fix_steps": [
                {
                    "type": "command",
                    "description": "CMakeの依存関係をインストール",
                    "command": "sudo apt-get update && sudo apt-get install -y cmake build-essential",
                    "validation": "cmake --version"
                },
                {
                    "type": "file_modification",
                    "description": "CMakeLists.txtの最小バージョンを確認",
                    "file_path": "CMakeLists.txt",
                    "action": "replace",
                    "content": "cmake_minimum_required(VERSION 3.10)\nproject({project_name})",
                    "validation": "cmake . -B build"
                }
            ],
            "risk_level": "medium",
            "estimated_time": "10分",
            "success_rate": 0.75,
            "prerequisites": [
                "CMakeLists.txtファイルが存在すること"
            ],
            "validation_steps": [
                "cmake configurationが正常に完了することを確認"
            ]
        },
        {
            "id": "gradle_build_fix",
            "name": "Gradleビルド修正",
            "description": "Gradleビルドエラーを修正",
            "pattern_ids": [
                "gradle_build_failure"
            ],
            "fix_steps": [
                {
                    "type": "command",
                    "description": "Gradleキャッシュをクリア",
                    "command": "./gradlew clean",
                    "validation": "./gradlew tasks"
                },
                {
                    "type": "command",
                    "description": "依存関係を更新",
                    "command": "./gradlew --refresh-dependencies",
                    "validation": "./gradlew dependencies"
                }
            ],
            "risk_level": "low",
            "estimated_time": "8分",
            "success_rate": 0.78,
            "prerequisites": [
                "build.gradleファイルが存在すること",
                "gradlewスクリプトが存在すること"
            ],
            "validation_steps": [
                "gradlew buildが正常に完了することを確認"
            ]
        },
        {
            "id": "maven_build_fix",
            "name": "Mavenビルド修正",
            "description": "Mavenビルドエラーを修正",
            "pattern_ids": [
                "maven_build_failure"
            ],
            "fix_steps": [
                {
                    "type": "command",
                    "description": "Mavenキャッシュをクリア",
                    "command": "mvn clean",
                    "validation": "mvn validate"
                },
                {
                    "type": "command",
                    "description": "依存関係を強制更新",
                    "command": "mvn dependency:resolve -U",
                    "validation": "mvn dependency:tree"
                }
            ],
            "risk_level": "low",
            "estimated_time": "10分",
            "success_rate": 0.77,
            "prerequisites": [
                "pom.xmlファイルが存在すること"
            ],
            "validation_steps": [
                "mvn compileが正常に完了することを確認"
            ]
        },
        {
            "id": "npm_build_fix",
            "name": "NPMビルド修正",
            "description": "NPMビルドエラーを修正",
            "pattern_ids": [
                "npm_build_error"
            ],
            "fix_steps": [
                {
                    "type": "command",
                    "description": "node_modulesを削除して再インストール",
                    "command": "rm -rf node_modules package-lock.json && npm install",
                    "validation": "npm list"
                },
                {
                    "type": "command",
                    "description": "NPMキャッシュをクリア",
                    "command": "npm cache clean --force",
                    "validation": "npm cache verify"
                }
            ],
            "risk_level": "medium",
            "estimated_time": "12分",
            "success_rate": 0.82,
            "prerequisites": [
                "package.jsonファイルが存在すること"
            ],
            "validation_steps": [
                "npm run buildが正常に完了することを確認"
            ]
        }
    ]
}